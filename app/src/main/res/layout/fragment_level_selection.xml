<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#efebc7">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Επιλέξτε Επίπεδο"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/levelsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/titleText">

        <Button
            android:id="@+id/level1Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Επίπεδο 1"
            android:textSize="18sp"
            android:background="@drawable/button_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:letterSpacing="0.05"
            android:elevation="4dp"/>

        <Button
            android:id="@+id/level2Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Επίπεδο 2"
            android:textSize="18sp"
            android:background="@drawable/button_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:letterSpacing="0.05"
            android:elevation="4dp"/>

        <Button
            android:id="@+id/level3Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Επίπεδο 3"
            android:textSize="18sp"
            android:background="@drawable/button_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:letterSpacing="0.05"
            android:elevation="4dp"/>

        <Button
            android:id="@+id/level4Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Επίπεδο 4"
            android:textSize="18sp"
            android:background="@drawable/button_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:letterSpacing="0.05"
            android:elevation="4dp"/>

        <Button
            android:id="@+id/level5Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Επίπεδο 5"
            android:textSize="18sp"
            android:background="@drawable/button_background"
            android:padding="16dp"
            android:letterSpacing="0.05"
            android:elevation="4dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout> 