<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#efebc7">

    <TextView
        android:id="@+id/questionNumberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/livesContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/life1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’–"
            android:textSize="24sp"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/life2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’–"
            android:textSize="24sp"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/life3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’–"
            android:textSize="24sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/wordsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="160dp"
        app:layout_constraintTop_toBottomOf="@id/questionNumberText">

        <LinearLayout
            android:id="@+id/leftWordsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="16dp">

            <Button
                android:id="@+id/leftWord1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textSize="18sp"
                android:background="@drawable/button_background"
                android:padding="16dp"
                android:letterSpacing="0.05"
                android:elevation="4dp"/>

            <Button
                android:id="@+id/leftWord2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textSize="18sp"
                android:background="@drawable/button_background"
                android:padding="16dp"
                android:letterSpacing="0.05"
                android:elevation="4dp"/>

            <Button
                android:id="@+id/leftWord3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textSize="18sp"
                android:background="@drawable/button_background"
                android:padding="16dp"
                android:letterSpacing="0.05"
                android:elevation="4dp"/>

            <Button
                android:id="@+id/leftWord4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:background="@drawable/button_background"
                android:padding="16dp"
                android:letterSpacing="0.05"
                android:elevation="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rightWordsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/rightWord1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textSize="18sp"
                android:background="@drawable/button_background"
                android:padding="16dp"
                android:letterSpacing="0.05"
                android:elevation="4dp"/>

            <Button
                android:id="@+id/rightWord2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textSize="18sp"
                android:background="@drawable/button_background"
                android:padding="16dp"
                android:letterSpacing="0.05"
                android:elevation="4dp"/>

            <Button
                android:id="@+id/rightWord3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textSize="18sp"
                android:background="@drawable/button_background"
                android:padding="16dp"
                android:letterSpacing="0.05"
                android:elevation="4dp"/>

            <Button
                android:id="@+id/rightWord4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:background="@drawable/button_background"
                android:padding="16dp"
                android:letterSpacing="0.05"
                android:elevation="4dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout> 